<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Expense Tracker</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Expense Tracker</h1>
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Income</h4>
            <form action="/posts/add" method="POST" class="form-inline justify-content-center mb-4">
              <div class="form-group mx-2">
                <input type="text" class="form-control" name="description" placeholder="Income Description" required>
              </div>
              <div class="form-group mx-2">
                <input type="number" class="form-control" name="amount" placeholder="Amount" required>
              </div>
              <input type="hidden" name="type" value="income">
              <button type="submit" class="btn btn-primary mx-2">Add Income</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Expense</h4>
            <form action="/posts/add" method="POST" class="form-inline justify-content-center mb-4">
              <div class="form-group mx-2">
                <input type="text" class="form-control" name="description" placeholder="Expense Description" required>
              </div>
              <div class="form-group mx-2">
                <input type="number" class="form-control" name="amount" placeholder="Amount" required>
              </div>
              <input type="hidden" name="type" value="expense">
              <button type="submit" class="btn btn-primary mx-2">Add Expense</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="card-title">Summary</h4>
        <div class="row">
          <div class="col-md-4">
            <h5>Total Income: ₹ <%= incomeTotal %></h5>
          </div>
          <div class="col-md-4">
            <h5>Total Expenses: ₹ <%= expenseTotal %></h5>
          </div>
          <div class="col-md-4">
            <h5>Money Left: ₹ <%= moneyLeft %></h5>
          </div>
        </div>
        <h4 class="card-title mt-4">Transactions</h4>
        <ul class="list-group mt-3">
          <% transactions.forEach(transaction => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= transaction.description %> - ₹ <%= transaction.amount %> (<%= transaction.type %>)</span>
              <form action="/posts/delete/<%= transaction._id %>" method="POST" class="form-inline">
                <button type="submit" class="btn btn-danger btn-sm mx-2">Delete</button>
              </form>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
